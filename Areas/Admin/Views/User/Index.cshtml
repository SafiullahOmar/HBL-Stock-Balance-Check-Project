@using OnlineStore.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
  
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New User</a>
    </div>
</div>
<br />
<div>
    <table id="tbl" class="table table-striped border">
        <thead class="thead-light">
            <tr class="table-info">
                <th>
                    Name
                </th>
                <th>
                    UserName
                </th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.UserName</td>
                    @if (item.LockoutEnd > DateTime.Now && item.LockoutEnd != null)
                    {
                        <td>Inactive</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Active" class="btn btn-primary" asp-route-id="@item.Id">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>

                        </td>

                    }
                    else
                    {
                        <td>Active</td>
                        <td style="width: 150px">
                            <partial name="_partial" model="@item.Id" />
                        </td>

                    }

                </tr>
            }
        <tbody>
    </table>
</div>

@section scripts{


    <script src="~/lib/Alertify/alertify.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != '') {
                alertify.success(save);
            }
            var edit = '@TempData["edit"]'
            if (edit != '') {
                alertify.success(edit);
            }
            var del = '@TempData["delete"]'
            if (del != '') {
                alertify.error(del);
            }

            if ($.fn.dataTable.isDataTable('#tbl')) {
                table = $('#tbl').DataTable();
            }
            else {
                table = $('#tbl').DataTable({
                    paging: false
                });
            }
        });
    </script>
}